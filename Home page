$host = "localhost";
$user = "root";
$pass = "";
$db   = "publication_db";

$conn = new mysqli($host, $user, $pass, $db);
if ($conn->connect_error) {
    die("‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏ê‡∏≤‡∏ô‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÑ‡∏°‡πà‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à: " . $conn->connect_error);
